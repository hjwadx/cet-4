<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background" >
    
    <View
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_alpha_20" />
    
    <Button
        android:id="@+id/type_select_btn_0"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_white_bg_with_bottom_line"
        android:gravity="center"
        android:textColor="@color/textcolor_4c"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/type_select_btn_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_white_bg_with_bottom_line"
        android:gravity="center"
        android:textColor="@color/textcolor_4c"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/type_select_btn_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_white_bg_with_bottom_line"
        android:gravity="center"
        android:textColor="@color/textcolor_4c"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/type_select_btn_3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/selector_white_bg_with_bottom_line"
        android:gravity="center"
        android:textColor="@color/textcolor_4c"
        android:textSize="16sp" />

</LinearLayout>
