<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/app_background">
    
    <View
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_alpha_20" />
    
    <TextView
        android:id="@+id/statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="20dp"
        android:textColor="@color/textcolor_80"
        android:textSize="16sp" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_alpha_20" />
    
    
    <View
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_alpha_20" />
    
    
    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="继续练习"
        android:textColor="@color/actionbar_background"
        android:textSize="16sp" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_alpha_20" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button
            android:id="@+id/all_analyze"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:text="查看全部解析"
            android:textColor="@color/select_green"
            android:textSize="16sp" />

        <View
            android:layout_width="1px"
            android:layout_height="25dp"
            android:background="@color/black_alpha_20"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/inaccurate_analyze"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:text="查看错误解析"
            android:textColor="@color/select_red"
            android:textSize="16sp" />
        
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_alpha_20" />
</LinearLayout>
